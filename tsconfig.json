{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "src/*": ["src/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [".eslintrc.js"]
}
